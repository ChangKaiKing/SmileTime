<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jokesitemllhead_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jokesitmeheadimg_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/jokesitemusername_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:padding="10dp"
            />

        <ImageView
            android:id="@+id/jokesitemtypeimg_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/jokesitemtypetext_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/jokesitemtext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jokesitemsmile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="好笑"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemsmilenumb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemcomment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="评论"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemcommentnumb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemshare_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="分享"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemsharenumb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/jokesitemllbottm_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jokesitemsmileimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:onClick="imgaction"

                android:src="@drawable/smilesector" />

            <ImageView
                android:id="@+id/jokesitemsadimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:clickable="true"
                android:onClick="imgaction"
                android:src="@drawable/sadsector" />

            <ImageView
                android:id="@+id/jokesitemcommentimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:clickable="true"
                android:onClick="imgaction"
                android:src="@mipmap/comment" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/jokesitemimgshareimg_id"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:saveEnabled="false"
                android:onClick="imgaction"
                android:src="@mipmap/share" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>