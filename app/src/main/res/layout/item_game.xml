<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_game_id"
        android:background="@drawable/image1_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/default_users_avatar"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/btn_go_id"
        android:layout_width="48dp"
        android:layout_height="30dp"
        android:text="启动"
        android:background="@drawable/btn1_shape"
        android:textSize="10sp"
        android:textColor="#a3e060"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/tv_playNumbers_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300万人在玩"
        android:textSize="10sp"
        android:layout_below="@id/btn_go_id"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/iv_game_id"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_game_id"
        android:layout_toLeftOf="@id/tv_playNumbers_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_gameName_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="传奇世界"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_gameName_id"
                android:src="@mipmap/abc_ic_star_black_16dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_gameName_id"
                android:src="@mipmap/abc_ic_star_black_16dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_gameName_id"
                android:src="@mipmap/abc_ic_star_black_16dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_gameName_id"
                android:src="@mipmap/abc_ic_star_black_16dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_gameName_id"
                android:src="@mipmap/abc_ic_star_black_16dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="传奇首创，再现巅峰，大型智..."
            />
    </LinearLayout>

</RelativeLayout>