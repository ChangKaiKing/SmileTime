<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
    android:orientation="vertical">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:background="#ffba1f"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_title_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/welcomethree"
        android:scaleType="fitXY"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="个人中心"
        android:layout_toRightOf="@id/iv_title_id"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />


    <RelativeLayout
        android:id="@+id/rl_login_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_users_avatar"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_user_id"
            android:text="登录 / 注册"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_nearUser_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <com.king.views.MySelfView
                android:id="@+id/iv_nearUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/default_users_avatar"
                />

            <TextView
                android:id="@+id/tv_nearUser_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近糗友"
                android:layout_below="@+id/iv_nearUser"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_group_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <com.king.views.MySelfView
                android:id="@+id/iv_group_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_users_avatar"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_group_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群"
                android:layout_below="@+id/iv_group_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_merchandise_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <com.king.views.MySelfView
                android:id="@+id/iv_merchandise_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_users_avatar"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_merchandise_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="糗百货"
                android:layout_below="@+id/iv_merchandise_id"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_chick_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <com.king.views.MySelfView
                android:id="@+id/iv_chick_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_users_avatar"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_chick_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小鸡"
                android:layout_below="@+id/iv_chick_id"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_qiuBaimanager_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.king.views.MySelfView
                android:id="@+id/iv_qiuBaimanager_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_users_avatar"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_qiuBaimanager_id"
                android:text="管理糗事和动态"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            />

        <RelativeLayout
            android:id="@+id/rl_myMedal_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <com.king.views.MySelfView
                android:id="@+id/iv_myMedal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_users_avatar"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_myMedal_id"
                android:text="我的勋章"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_gameCenter_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <com.king.views.MySelfView
                android:id="@+id/iv_gameCenter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_users_avatar"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_gameCenter_id"
                android:text="游戏中心"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=">"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            />
        <include
            android:id="@+id/game1_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            layout="@layout/item_game"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"
            />
        <include
            android:id="@+id/game1_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            layout="@layout/item_game"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />

    <RelativeLayout
        android:id="@+id/rl_nightMoon_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <com.king.views.MySelfView
            android:id="@+id/iv_nightMoon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_users_avatar"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_nightMoon_id"
            android:text="夜间模式"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2"
        />

    <RelativeLayout
        android:id="@+id/rl_select_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <com.king.views.MySelfView
            android:id="@+id/iv_select_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_users_avatar"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_select_id"
            android:text="设置"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>