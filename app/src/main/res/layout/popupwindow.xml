<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#ffffff"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="分享给朋友"
        android:gravity="center"
        android:textSize="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wechat_circle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_wechat_timeline"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_wechat"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_qq"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/qzone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_qzone"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="微信"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="QQ"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="空间"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_sina_weibo"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/qiuyou"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_chat_msg"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/qiuyou_circle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_circle"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/copy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_share_copy"
            android:layout_height="match_parent" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="微博"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="糗友/群"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="糗友圈"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="链接"/>

    </LinearLayout>

</LinearLayout>