<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jokesitemimgllhead_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jokesitmeimgheadimg_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
             />

        <TextView
            android:id="@+id/jokesitemimguesrname_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:padding="10dp"
             />

        <ImageView
            android:id="@+id/jokesitemimgtypeimg_id"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
             />

        <TextView
            android:id="@+id/jokesitemimgtypetext_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/jokesitemimgtext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jokesitemingllhead_id"
        android:layout_margin="10dp"
        />

    <ImageView
        android:id="@+id/jokesitemimg_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/jokesitemtext_id"
        android:layout_weight="1"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jokesitemimgsmile_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="好笑"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemimgsmilenumb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemimgcomment_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="评论"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemimgcommentnumb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemimgshare_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="分享"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/jokesitemimgsharenumb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/jokesitemimgllbottm_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/jokesitemimgsmileimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:onClick="imgaction"
                android:src="@drawable/smilesector" />

            <ImageView
                android:id="@+id/jokesitemimgsadimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:clickable="true"
                android:onClick="imgaction"
                android:src="@drawable/sadsector" />

            <ImageView
                android:id="@+id/jokesitemimgcommentimg_id"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="40dp"
                android:src="@mipmap/comment" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/jokesitemimgshareimg_id"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:onClick="imgaction"
                android:src="@mipmap/share" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>